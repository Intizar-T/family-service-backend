// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  name      String      @id @unique
  nickName  String? 

  createdProduct   Product[]   @relation("created")
  boughtProduct    Product[]   @relation("bought")
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String
  isBought    Boolean         @default(false)

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  createdUser       User        @relation("created", fields: [createdUserName], references: [name])
  createdUserName   String

  boughtUser        User?        @relation("bought", fields: [boughtUserName], references: [name])
  boughtUserName    String?
}